[flake8]
# Maximum line length
max-line-length = 127

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    mlruns,
    .pytest_cache,
    .coverage,
    htmlcov

# Ignore specific errors
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # imported but unused (sometimes needed for type hints)

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:F401

# Maximum complexity
max-complexity = 10

